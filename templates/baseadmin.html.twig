{% extends "base.html.twig" %}

{% block stylesheets %}{% endblock %}

{% block top %}
    <div class="container text-end">
        {% if app.user %}
            <a href="{{ path('logout')}}">se déconnecter</a>
        {% endif %} 
        </div>
    <div class="container">
        <!-- titre -->
        <div class="text-left">
            <div class="row">
                <div class="col">
                    <img src="{{ app.request.getBasePath()~'/banniere.jpg' }}" alt='Image banniere' >
                </div>
                <div class="col align-self-center" > 
                    <h1>{% block h1 %} {% endblock %}</h1>
                </div>
        </div>
        <!-- menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin.formations') }}">Formations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin.playlists') }}">Playlists</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin.categories') }}">Catégories</a>
                    </li>
                </ul>
            </div>
        </nav>        
    </div>
                    
    
{% endblock %}
{% block body %}{% endblock %}
{% block footer %}
    <div class="container text-center">
        <footer>
            <hr>
            <p><small><em>
                Consultez nos <a class="link-secondary" href="{{ path('cgu') }}">Conditions Générales d'Utilisation</a>
            </em></small></p>
            
        </footer>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}