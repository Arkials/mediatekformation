{% extends "baseadmin.html.twig" %}
{% block h1 %} Gestion des catégories{% endblock %}
{% block body %}
    
    {% for message in app.flashes('error') %}
        <div class="mt-3 alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col d-flex flex-column">
            <table>
                <caption>Liste des catégories</caption>
                <th class="text-center">Catégories</th> 
                <th class="text-center">Actions</th> 

                {% for categorie in categories %}
                    <tr class="text-center" >
                        <td  style="width: 50%">{{ categorie.name }}</td>
                        <td  style="width: 50%" class="text-center"><a href="{{ path('admin.categories.suppr', {id:categorie.id}) }}" class="btn btn-danger d-flex flex-md-column " onclick="return confirm('Etes-vous sûr de vouloir supprimer {{ categorie.name }} ?')">Supprimer</a></td>
                    </tr>
                {% endfor %}   

            </table>
            </div>
            <div class="col d-flex flex-column">           
             {{include ('_admin.categories.form.html.twig')}}
        </div>
    </div>
               
    
{%endblock  %}